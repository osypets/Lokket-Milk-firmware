config wifi-device  radio0
	option type     mac80211
	option channel  11
	option hwmode	11g
	option path	'pci0000:00/0000:00:00.0'
	option htmode	HT20

config wifi-iface
	option device   radio0
	option network  mesh
	option mode     adhoc
	option ssid     'lokket.com - mesh'
	option bssid	'02:CA:FE:CA:CA:40'
	option encryption none
	option hidden '1'
	
config wifi-iface
	option device   radio0
	option network  lan
	option mode     ap
	option ssid     'MilkAP'
	option encryption psk2+tkip+aes
	option key	HareKrishna
	option hidden '0'
